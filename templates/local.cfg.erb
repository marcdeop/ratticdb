[ratticweb]
debug = False
secretkey = [enter a string of random secret data]
hostname = <%= @url %>

[filepaths]
static = <%= @appFolder %>/static

[database]
engine = django.db.backends.mysql
name = <%= @dbName %>
user = <%= @dbUser %>
password = <%= @dbUserPwd %>
host = <%= @dbHost %>
port = <%= @dbPort %>

<% if @ldap %>
[ldap]
# LDAP server details
uri = ldaps://<%= @ldapServer %>

# User parameters
userbase = <%= @userBase %>
userfilter = <%= @userFilter %>

# Set up the basic group parameters.
groupbase = <%= @groupBase %>
groupfilter = <%= @groupFilter %>
grouptype = <%= @groupType %>
useldapgroups = TRUE

# How do I find staff
staff = <%= @staff %>
<% end %>
